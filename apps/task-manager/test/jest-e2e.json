{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@data/task-manager-data/(.*)": "<rootDir>/../libs/task-manager-data/src/$1",
    "@data/task-manager-data": "<rootDir>/../libs/task-manager-data/src"
  }
}